<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Command') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.periodic_command.periodicCommand">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Period (mins)') }}</label>
        <div class="controls">
            <input type="number" min="1" class="input-mini text-right" data-bind="value: settings.plugins.periodic_command.periodicPeriod">
        </div>
    </div>
</form>
